<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_question">

    <com.example.vm510lf.psyapp.Titlebar
        android:id="@+id/titlebar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/theme_to_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="59dp"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:background="#00000000"
        android:hint="请输入主题"
        android:textColor="#00001a"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/detail_to_question"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/detail_to_question"
        style="?android:attr/textViewStyle"
        android:layout_width="250dp"
        android:layout_height="296dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:background="#00000000"
        android:gravity="top"
        android:hint="请具体描述您的问题"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:textSize="15sp"
        android:textColor="#75878A"
        app:layout_constraintBottom_toTopOf="@+id/send_question"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/send_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="66dp"
        android:layout_marginRight="66dp"
        android:background="@drawable/send_question"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>